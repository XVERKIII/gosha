<Page x:Class="autoRepairShop.LogIn.LogInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:autoRepairShop.LogIn"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogInPage">

    <Grid Background="#FF745A40">
        <Grid.RowDefinitions>
            <RowDefinition Height="349*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <Label VerticalAlignment="Center" Margin="0 100 0 0" Content="Введите пароль" HorizontalAlignment="Center" FontSize="20" Foreground="AliceBlue"/>
            <TextBox x:Name="LogInBox" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Button x:Name="LogInBtn" Content="Войти" Style="{StaticResource btnStyle}" Click="LogInBtn_Click"/>
            
        </StackPanel>
    </Grid>
</Page>
